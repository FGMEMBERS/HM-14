<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>siege</object-name>
    <object-name>mancheabalai</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>shader.png</texture>
    <object-name>intvitres</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/HM-14/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.200 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.320 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/HM-14/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -1.405 </x-m>
      <y-m> -0.075 </y-m>
      <z-m>  0.125 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <animation>
    <type>rotate</type>
    <object-name>mancheabalai</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> 15 </factor>
    <center>
      <x-m> -1.344 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.696 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>mancheabalai</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> 15 </factor>
    <center>
      <x-m> -1.344 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.696 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

