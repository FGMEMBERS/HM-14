<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>siege</object-name>
    <object-name>mancheabalai</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/HM-14/Models/Effects/Glass/glass</inherits-from>
    <object-name>intvitres</object-name>
  </effect>
  
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>intvitres</object-name>
  </effect>
  
  <!-- Pilote -->
  <model>
    <path>Aircraft/HM-14/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.200 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.320 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/HM-14/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -1.405 </x-m>
      <y-m> -0.075 </y-m>
      <z-m>  0.125 </z-m>
    </offsets>
  </model>

  <animation>
    <type>rotate</type>
    <object-name>mancheabalai</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> 15 </factor>
    <center>
      <x-m> -1.344 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.696 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>mancheabalai</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> 15 </factor>
    <center>
      <x-m> -1.344 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.696 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
